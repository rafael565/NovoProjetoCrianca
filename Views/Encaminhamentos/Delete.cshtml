@model NovoProjetoCrianca.Models.Encaminhamento

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Apagar</h1>

<h3>Tem certeza?</h3>
<div>
    <h4>Encaminhamento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.entidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.entidade.endereco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.assistentesocial)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.assistentesocial.cpf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.aluno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.aluno.email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.motivo)
        </dt>
        <dd class = "col-sm-10">

            @if (Model.motivo)
            {
                @:Evasão Escolar
            }
            else
            {
                @:Abandono Familiar
            }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatadeEncaminhamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatadeEncaminhamento)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Voltar a lista</a>
    </form>
</div>
