@model NovoProjetoCrianca.Models.Encaminhamento

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Adicionar Encaminhamentos</h1>

<h4>Encaminhamento</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            
            <div class="form-group">
                <label asp-for="entidadeID" class="control-label">Entidade</label>
                <select asp-for="entidadeID" class="form-control" asp-items="ViewBag.entidadeID">
                    <option value="">Selecione uma entidade</option>
                </select>
                <span asp-validation-for="entidadeID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="assistentesocialID" class="control-label">Assistente Social</label>
                <select asp-for="assistentesocialID" class="form-control" asp-items="ViewBag.assistentesocialID">
                    <option value="">Selecione um assistente social</option>
                </select>
                <span asp-validation-for="assistentesocialID" class="text-danger"></span>
            </div>

          
            <div class="form-group">
                <label asp-for="alunoID" class="control-label">Aluno</label>
                <select asp-for="alunoID" class="form-control" asp-items="ViewBag.alunoID">
                    <option value="">Selecione um aluno</option>
                </select>
                <span asp-validation-for="alunoID" class="text-danger"></span>
            </div>

          
            <div class="form-group">
                <label asp-for="motivo" class="control-label">Motivo</label>
                <select asp-for="motivo" class="form-control">
                    <option value="true">Evasão Escolar</option>
                    <option value="false">Abandono Familiar</option>
                </select>
                <span asp-validation-for="motivo" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="DatadeEncaminhamento" class="control-label">Data de Encaminhamento</label>
                <input asp-for="DatadeEncaminhamento" class="form-control" type="date" />
                <span asp-validation-for="DatadeEncaminhamento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Voltar a lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
