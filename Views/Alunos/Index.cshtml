@model IEnumerable<NovoProjetoCrianca.Models.Aluno>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Alunos</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Adicionar Aluno</a>
    
</p>

<form asp-action="index">



    <div class="form-group">
        <label for="idAluno">Informe o Nome do Aluno:</label>
        <input type="text" id="idAluno" name="nome" class="form-control" placeholder="Digite o nome do aluno" />
    </div>
    <br />

    <div class="form-group text-center">
        <input type="submit" value="Filtrar" class="btn btn-success btn-lg" />
    </div>
    <br />
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dadofamilia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.escolaridade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatadeNascimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.dadofamilia.HistoricoFamiliar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.escolaridade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatadeNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-secondary " asp-route-id="@item.id">Editar</a> |
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.id">Detalhes</a> |
                    <a asp-action="Delete" class="btn btn-secondary" asp-route-id="@item.id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
