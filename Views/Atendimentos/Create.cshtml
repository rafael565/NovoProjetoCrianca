@model NovoProjetoCrianca.Models.Atendimento

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center text-primary">Cadastrar Atendimento</h1>
    <h4 class="text-center text-secondary">Preencha as informações do atendimento</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Assistente Social -->
                <div class="form-group">
                    <label asp-for="assistenteSocialID" class="control-label font-weight-bold">Assistente Social</label>
                    <select asp-for="assistenteSocialID" class="form-control" asp-items="ViewBag.assistenteSocialID"></select>
                </div>

                <!-- Família -->
                <div class="form-group">
                    <label asp-for="dadofamiliaID" class="control-label"></label>
                    <select asp-for="dadofamiliaID" class="form-control">
                        <option value="0">Pobreza</option>
                        <option value="1">Abandono</option>
                    </select>
                    <span asp-validation-for="dadofamiliaID" class="text-danger"></span>
                </div>

                <!-- Data do Atendimento -->
                <div class="form-group">
                    <label asp-for="DataAtendimento" class="control-label font-weight-bold">Data do Atendimento</label>
                    <input asp-for="DataAtendimento" class="form-control" type="date" />
                    <span asp-validation-for="DataAtendimento" class="text-danger"></span>
                </div>

                <!-- Observação -->
                <div class="form-group">
                    <label asp-for="observacao" class="control-label font-weight-bold">Observação</label>
                    <select asp-for="observacao" class="form-control">
                        <option value="true">Resolvido</option>
                        <option value="false">Não resolvido</option>
                    </select>
                    <span asp-validation-for="observacao" class="text-danger"></span>
                </div>

                <!-- Botão de Enviar -->
                <div class="form-group text-center">
                    <input type="submit" value="Adicionar" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Voltar para a Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
