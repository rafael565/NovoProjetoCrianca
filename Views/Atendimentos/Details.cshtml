@model NovoProjetoCrianca.Models.Atendimento

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Atendimento</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.assistenteSocial)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.assistenteSocial.cpf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dadofamilia)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.dadofamilia.HistoricoFamiliar)
            {
                @:Pobreza
            }
            else
            {
                @:Abandono
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataAtendimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataAtendimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.observacao)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.observacao)
            {
                @:Resolvido
            }
            else
            {
                @:Não resolvido
            }
        </dd>
    </dl>
</div>
<div class="text-center mt-3">
    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model?.id">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar a lista</a>
</div>
