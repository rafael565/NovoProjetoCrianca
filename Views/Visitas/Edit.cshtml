@model NovoProjetoCrianca.Models.Visita

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Visita</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="assistenteSocialID" class="control-label"></label>
                <select asp-for="assistenteSocialID" class="form-control" asp-items="ViewBag.assistenteSocialID"></select>
                <span asp-validation-for="assistenteSocialID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dadofamiliaID" class="control-label"></label>
                <select asp-for="dadofamiliaID" class="form-control">
                    <option value="0">Pobreza</option>
                    <option value="1">Abandono</option>
                </select>
                <span asp-validation-for="dadofamiliaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataAtendimento" class="control-label"></label>
                <input asp-for="DataAtendimento" class="form-control" />
                <span asp-validation-for="DataAtendimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="observacao" class="control-label"></label>
                <select asp-for="observacao" class="form-control">
                    <option value="true">Resolvido</option>
                    <option value="false">Não Resolvido</option>
                </select>
                <span asp-validation-for="observacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
