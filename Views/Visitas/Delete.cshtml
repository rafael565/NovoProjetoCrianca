@model NovoProjetoCrianca.Models.Visita

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Apagar</h1>

<h3>Tem certeza?</h3>
<div>
    <h4>Visita</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.assistenteSocial)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.assistenteSocial.cpf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.dadofamilia)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.dadofamilia.HistoricoFamiliar)
            {
                @:Pobreza
            }
            else
            {
                @:Abandono
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataAtendimento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataAtendimento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.observacao)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.observacao)
            {
                @:Resolvido
            }
            else
            {
                @:Não Resolvido
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Voltar a lista</a>
    </form>
</div>
