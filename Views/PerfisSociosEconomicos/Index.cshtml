@model IEnumerable<NovoProjetoCrianca.Models.PerfilSocioEconomico>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Perfil Socio Econômico</h1>

<p>
    <a asp-action="Create" class="btn btn-secondary">Adicionar novo Perfil</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dadofamilia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rendafamilia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.situacaofamilia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.profissaoPai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.profissaoMae)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @if (item.dadofamilia.HistoricoFamiliar)
                    {
                        @:Pobreza
                    }
                    else
                    {
                        @:Abandono
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.rendafamilia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.situacaofamilia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.profissaoPai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.profissaoMae)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.id">Editar</a>
                    <a asp-action="Details" class="btn btn-secondary" asp-route-id="@item.id">Detalhes</a>
                    <a asp-action="Delete" class="btn btn-secondary" asp-route-id="@item.id">Apagar</a>

            </td>
        </tr>
}
    </tbody>
</table>
