@model IEnumerable<NovoProjetoCrianca.Models.Atendimento>

@{
    ViewData["Title"] = "ResFiltrarAtendimento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Filtrar Atendimento</h1>

<p>
    <a asp-action="FiltrarAtendimento">Filtrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.assistenteSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dadofamilia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataAtendimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.observacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.assistenteSocial.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dadofamilia.endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataAtendimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.observacao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
