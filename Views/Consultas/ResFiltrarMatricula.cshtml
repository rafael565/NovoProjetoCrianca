@model IEnumerable<NovoProjetoCrianca.Models.Matricula>

@{
    ViewData["Title"] = "ResFiltrarMatricula";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Filtrar Matricula</h1>

<p>
    <a asp-action="FiltrarMatricula">Filtrar</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.turma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.aluno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataMatricula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.statusMatricula)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @{
            int cont = 0;
            int soma = 0;
            int soma2 = 0;


        }
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.turma.nomeTurma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aluno.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataMatricula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.statusMatricula)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
            </tr>

            soma = soma + item.turmaID;
            soma2 = soma2 + item.alunoID;
            cont++;
}
    </tbody>
</table>

<h3>Total de soma dos registro do Aluno:@soma2</h3>

<h3>Total de soma dos registro da Turma:@soma</h3>

<h3>Total de registro impressos:@cont</h3>
