@model NovoProjetoCrianca.Models.Matricula

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar</h1>

<h4>Matricula</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="turmaID" class="control-label"></label>
                <select asp-for="turmaID" class="form-control" asp-items="ViewBag.turmaID"></select>
                <span asp-validation-for="turmaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="alunoID" class="control-label"></label>
                <select asp-for="alunoID" class="form-control" asp-items="ViewBag.alunoID"></select>
                <span asp-validation-for="alunoID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataMatricula" class="control-label"></label>
                <input asp-for="DataMatricula" class="form-control" />
                <span asp-validation-for="DataMatricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="statusMatricula" class="control-label"></label>
                <select asp-for="statusMatricula" class="form-control" asp-items="Html.GetEnumSelectList<NovoProjetoCrianca.Enum.Status>()"></select>
                <span asp-validation-for="statusMatricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary">Voltar para a Lista</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
