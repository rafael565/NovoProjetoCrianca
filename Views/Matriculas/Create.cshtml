@model NovoProjetoCrianca.Models.Matricula

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Matrícula</h1>

<h4>Matrícula</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="turmaID" class="control-label">Turma</label>
                <select asp-for="turmaID" class="form-control" asp-items="ViewBag.turmaID">
                    <option value="">Selecione uma Turma</option>
                </select>
                <span asp-validation-for="turmaID" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <label asp-for="alunoID" class="control-label">Aluno</label>
                <select asp-for="alunoID" class="form-control" asp-items="ViewBag.alunoID">
                    <option value="">Selecione um Aluno</option>
                </select>
                <span asp-validation-for="alunoID" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="DataMatricula" class="control-label">Data da Matrícula</label>
                <input asp-for="DataMatricula" class="form-control" type="date" />
                <span asp-validation-for="DataMatricula" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="statusMatricula" class="control-label">Status da Matrícula</label>
                <input asp-for="statusMatricula" class="form-control" />
                <span asp-validation-for="statusMatricula" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
