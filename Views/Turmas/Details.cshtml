@model NovoProjetoCrianca.Models.Turma

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Turma</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.curso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.curso.CargaHoraria)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nomeTurma)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomeTurma)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.serie)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.serie)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.maximoAluno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.maximoAluno)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.minimoAluno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.minimoAluno)
        </dd>
    </dl>
</div>

<div class="text-center mt-3">
    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model?.id">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar a lista</a>
</div>
