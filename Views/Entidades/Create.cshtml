@model NovoProjetoCrianca.Models.Entidade

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Entidade</h1>

<h4>Entidade</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="nomeEntidade" class="control-label">Nome da Entidade</label>
                <input asp-for="nomeEntidade" class="form-control" placeholder="Informe o nome da entidade" />
                <span asp-validation-for="nomeEntidade" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <label asp-for="endereco" class="control-label">Endereço</label>
                <input asp-for="endereco" class="form-control" placeholder="Informe o endereço da entidade" />
                <span asp-validation-for="endereco" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="statusContrato" class="control-label">Status do Contrato</label>
                <input asp-for="statusContrato" class="form-control" placeholder="Informe o status do contrato" />
                <span asp-validation-for="statusContrato" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DatadeInicio" class="control-label">Data de Início</label>
                <input asp-for="DatadeInicio" class="form-control" type="date" />
                <span asp-validation-for="DatadeInicio" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <label asp-for="DatadoFim" class="control-label">Data de Fim</label>
                <input asp-for="DatadoFim" class="form-control" type="date" />
                <span asp-validation-for="DatadoFim" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
