@model NovoProjetoCrianca.Models.Chamada

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Chamada</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.matricula)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.matricula.id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatadeChamada)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatadeChamada)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Presenca)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Presenca)
            {
                @:Sim
            }
            else
            {
                @:Não
            }
        </dd>
    </dl>
</div>

<div class="text-center mt-3">
    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model?.id">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar a lista</a>
</div>
