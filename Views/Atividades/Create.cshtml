@model NovoProjetoCrianca.Models.Atividade

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center text-primary">Cadastrar Atividade</h1>
    <h4 class="text-center text-secondary">Preencha as informações da atividade</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                
                <div class="form-group">
                    <label asp-for="nome" class="control-label font-weight-bold">Nome da Atividade</label>
                    <input asp-for="nome" class="form-control" placeholder="Nome da atividade" />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <label asp-for="descricao" class="control-label font-weight-bold">Descrição</label>                    
                    <select asp-for="descricao" class="form-control">
                        <option value="true">Educativo</option>
                        <option value="false">Diversão</option>
                    </select>
                    <span asp-validation-for="descricao" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <label asp-for="DataAtividade" class="control-label font-weight-bold">Data da Atividade</label>
                    <input asp-for="DataAtividade" class="form-control" type="date" />
                    <span asp-validation-for="DataAtividade" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <label asp-for="duracaoAtividade" class="control-label font-weight-bold">Duração</label>
                    <input asp-for="duracaoAtividade" class="form-control" placeholder="Duração em horas" />
                    <span asp-validation-for="duracaoAtividade" class="text-danger"></span>
                </div>

               
                <div class="form-group text-center">
                    <input type="submit" value="Adicionar" class="btn btn-success btn-lg" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Voltar para a Lista</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
