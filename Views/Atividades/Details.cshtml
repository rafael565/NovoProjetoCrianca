@model NovoProjetoCrianca.Models.Atividade

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalhes</h1>

<div>
    <h4>Atividade</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.descricao)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.descricao)
            {
                @:Educativo
            }
            else
            {
                @:Diversão
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataAtividade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataAtividade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.duracaoAtividade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.duracaoAtividade)
        </dd>
    </dl>
</div>
<div class="text-center mt-3">
    <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model?.id">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar a lista</a>
</div>
