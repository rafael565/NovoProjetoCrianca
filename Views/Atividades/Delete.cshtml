@model NovoProjetoCrianca.Models.Atividade

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Apagar</h1>

<h3>Tem certeza?</h3>
<div>
    <h4>Atividade</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.descricao)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.descricao)
            {
                @:Educativo
            }
            else
            {
                @:Diversão
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataAtividade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataAtividade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.duracaoAtividade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.duracaoAtividade)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Voltar a lista</a>
    </form>
</div>
