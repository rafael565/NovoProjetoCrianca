@model NovoProjetoCrianca.Models.DadoFamilia

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Apagar</h1>

<h3>Tem certeza?</h3>
<div>
    <h4>Dados Familiares</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nomeMae)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomeMae)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatadeNascimentoMae)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatadeNascimentoMae)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.telefoneMae)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.telefoneMae)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nomePai)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nomePai)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DatadeNascimentoPai)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatadeNascimentoPai)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.telefonePai)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.telefonePai)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HistoricoFamiliar)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.HistoricoFamiliar)
            {
                @:Pobreza
            }
            else
            {
                @:Abandono
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.endereco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.endereco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.cidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.cidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-secondary">Voltar a lista</a>
    </form>
</div>
