@model NovoProjetoCrianca.Models.DadoFamilia

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Family Data</h1>

<h4>Dado Familia</h4>
<hr />
<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="nomeMae" class="control-label">Nome da Mãe</label>
                <input asp-for="nomeMae" class="form-control" placeholder="Digite o nome da mãe" />
                <span asp-validation-for="nomeMae" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DatadeNascimentoMae" class="control-label">Data de Nascimento da Mãe</label>
                <input asp-for="DatadeNascimentoMae" class="form-control" type="date" />
                <span asp-validation-for="DatadeNascimentoMae" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="telefoneMae" class="control-label">Telefone da Mãe</label>
                <input asp-for="telefoneMae" class="form-control" placeholder="Digite o telefone da mãe" />
                <span asp-validation-for="telefoneMae" class="text-danger"></span>
            </div>

         
            <div class="form-group">
                <label asp-for="nomePai" class="control-label">Nome do Pai</label>
                <input asp-for="nomePai" class="form-control" placeholder="Digite o nome do pai" />
                <span asp-validation-for="nomePai" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <label asp-for="DatadeNascimentoPai" class="control-label">Data de Nascimento do Pai</label>
                <input asp-for="DatadeNascimentoPai" class="form-control" type="date" />
                <span asp-validation-for="DatadeNascimentoPai" class="text-danger"></span>
            </div>

          
            <div class="form-group">
                <label asp-for="telefonePai" class="control-label">Telefone do Pai</label>
                <input asp-for="telefonePai" class="form-control" placeholder="Digite o telefone do pai" />
                <span asp-validation-for="telefonePai" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <label asp-for="HistoricoFamiliar" class="control-label">Histórico Familiar</label>
                <input asp-for="HistoricoFamiliar" class="form-control" placeholder="Descreva o histórico familiar" />
                <span asp-validation-for="HistoricoFamiliar" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <label asp-for="endereco" class="control-label">Endereço</label>
                <input asp-for="endereco" class="form-control" placeholder="Digite o endereço" />
                <span asp-validation-for="endereco" class="text-danger"></span>
            </div>

           
            <div class="form-group">
                <label asp-for="cidade" class="control-label">Cidade</label>
                <input asp-for="cidade" class="form-control" placeholder="Digite a cidade" />
                <span asp-validation-for="cidade" class="text-danger"></span>
            </div>

            
            <div class="form-group">
                <label asp-for="email" class="control-label">Email</label>
                <input asp-for="email" class="form-control" placeholder="Digite o email" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
